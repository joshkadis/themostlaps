{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "airbnb-base",
  ],
  "env": {
    "node": true,
    "es6": true,
    "jest": true,
  },
  "parser": "babel-eslint",
  "rules": {
    "react/react-in-jsx-scope": "off",
    "max-len": [
      2,
      80,
      4,
      {
        "ignoreComments": true,
        "ignoreUrls": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true,
        "ignoreRegExpLiterals": true,
      },
    ],
    "no-console": [0],
    "camelcase": [0],
    "import/prefer-default-export": [0],
    "no-underscore-dangle": [0],
  },
  "globals": {
    "React": "writable",
  },
}
